<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_tips_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tips"
        android:textColor="@color/text_title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_tips_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tip_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/btn_tip1"
                    android:orientation="vertical"
                    android:padding="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tip1_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start your message with &quot;Create an image&quot;, &quot;Create a photo&quot; or &quot;/imagine&quot; to generate images."
                        android:textColor="@color/tip1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/btn_tip1"
                    android:orientation="vertical"
                    android:padding="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tip_1">

                    <TextView
                        android:id="@+id/tip2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Long press chat name to edit or delete it."
                        android:textColor="@color/tip1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/btn_tip1"
                    android:orientation="vertical"
                    android:padding="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tip_2">

                    <TextView
                        android:id="@+id/tip3_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Search tricks:\n\nUse &quot;author:&quot; prefix to searh by author.\nUse &quot;title:&quot; prefix to search by title.\nUse &quot;id:&quot; prefix to search by id.\nUse &quot;cat:&quot; prefix to search y category.\nUse &quot;type:&quot; prefix to search by type."
                        android:textColor="@color/tip1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/btn_tip1"
                    android:orientation="vertical"
                    android:padding="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tip_3">

                    <TextView
                        android:id="@+id/tip4_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ChatGPT is stuffy? Try out other models. Sometimes you may get very interesting results."
                        android:textColor="@color/tip1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/btn_tip1"
                    android:orientation="vertical"
                    android:padding="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tip_4">

                    <TextView
                        android:id="@+id/tip5_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Only GPT models can remember previous messages. Other models are not optimized for it."
                        android:textColor="@color/tip1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip_6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/btn_tip1"
                    android:orientation="vertical"
                    android:padding="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tip_5">

                    <TextView
                        android:id="@+id/tip6_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sometimes some weird or useless features may appear. It because this app is in beta test."
                        android:textColor="@color/tip1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip_7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/btn_tip1"
                    android:orientation="vertical"
                    android:padding="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tip_6">

                    <TextView
                        android:id="@+id/tip7_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select text in any app and tap &quot;SpeakGPT&quot; to start conversation with assistant. This feature is available even if default assistant app feature is off."
                        android:textColor="@color/tip1" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>